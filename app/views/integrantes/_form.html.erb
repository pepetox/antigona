<%= form_for @integrante, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= text_area :description, class: 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cv_link, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cv_link, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :img_link, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :img_link, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :pos, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :pos, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                integrantes_path, :class => 'btn' %>
  </div>
<% end %>
