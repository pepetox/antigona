<%- model_class = Integrante -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @integrante.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @integrante.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cv_link) %>:</strong></dt>
  <dd><%= @integrante.cv_link %></dd>
  <dt><strong><%= model_class.human_attribute_name(:img_link) %>:</strong></dt>
  <dd><%= @integrante.img_link %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pos) %>:</strong></dt>
  <dd><%= @integrante.pos %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              integrantes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_integrante_path(@integrante), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              integrante_path(@integrante),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
