%h1
  = link_to @publicacion.name, publicacion_path(@publicacion)
%p
  - unless @publicacion.img_link == ""
    = image_tag @publicacion.img_link, :size => "400x400", class: "img-rounded", id: "foto-publicacion"
  %p= @publicacion.description.html_safe
  %p= link_to "link al documento", @publicacion.doc_link
  = l @publicacion.created_at
