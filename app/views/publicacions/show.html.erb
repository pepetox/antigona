<%- model_class = Publicacion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @publicacion.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @publicacion.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:img_link) %>:</strong></dt>
  <dd><%= @publicacion.img_link %></dd>
  <dt><strong><%= model_class.human_attribute_name(:doc_link) %>:</strong></dt>
  <dd><%= @publicacion.doc_link %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              publicacions_path, :class => 'btn'  %>

</div>
