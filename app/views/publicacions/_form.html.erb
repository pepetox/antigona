<%= form_for @publicacion, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= cktext_area :publicacion, :description, :ckeditor => {:uiColor => "#dddddd", :toolbar => "mini", :language => "es"} %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :img_link, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :img_link, :class => 'text_field' %>
      <% unless @publicacion.img_link == "" %>
           <%= image_tag @publicacion.img_link, :size => "200x200", class: "img-rounded", id: "foto_derecha" %>
      <% end %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :doc_link, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :doc_link, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :autor, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :autor, :class => 'text_field', placeholder: "AntÃ­gona" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                publicacions_path, :class => 'btn' %>
  </div>
<% end %>
